{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "verifyConditionsCmd": "node scripts/verify-release-env.js",
        "prepareCmd": "pnpm build && node scripts/update-version.js ${nextRelease.version} && pnpm package"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "manifest*.json",
          "package.json",
          "welcome.html",
          "options.html",
          "popup.html"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": ["packages/noobheaders-chrome.zip", "packages/noobheaders-firefox.zip"]
      }
    ]
  ]
}
